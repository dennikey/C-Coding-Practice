#include <stdio.h>
#include <string.h>

int main (void)
{
    int i, len;
    char surname[31], fullName[62];

    printf("Given name : ");
    scanf("%30[^\n]%*c", fullName);
    printf("Surname : ");
    scanf("%30[^\n]%*c", surname);
    strcat(fullName, " ");
    strcat(fullName, surname);
    printf("fullName is %s\n", fullName);

    return 0;
}
